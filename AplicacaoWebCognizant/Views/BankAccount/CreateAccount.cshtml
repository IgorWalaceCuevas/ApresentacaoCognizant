@model Cognizant.Domain.Entities.Metadata.BankAccountMetadata
@{
    ViewBag.Title = "CreateAccount";
}

<h2>Criação de conta</h2>

@using (Html.BeginForm("CreateAccount", "BankAccount", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="row">
        <div class="col-md-12">
            @Html.LabelFor(m => m.Balance)
        </div>
        <div class="col-md-12">
            @Html.TextBoxFor(m => m.Balance)
            @Html.ValidationMessageFor(m => m.Balance)
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @Html.LabelFor(m => m.Limit)
        </div>
        <div class="col-md-12">
            @Html.TextBoxFor(m => m.Limit)
            @Html.ValidationMessageFor(m => m.Limit)
        </div>
    </div>
    <input type="submit" value="Criar" class="btn btn-default" />
}